<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="list_item" styleClass="list-cell-app" alignment="CENTER_LEFT" spacing="10.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.upol.logicgo.controllers.listControllers.GameHistoryItemController">
    <ImageView fx:id="thumbnailView" fitHeight="100" fitWidth="100" preserveRatio="true" />

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="titleLabel" style="-fx-font-weight: bold;" />
        <Label fx:id="infoLabel" />
        <HBox spacing="5.0">
            <Button fx:id="viewButton" text="Zobrazit" />
            <Button fx:id="deleteButton" styleClass="buttonDelete" text="Smazat" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </HBox>
    </VBox>
</HBox>
